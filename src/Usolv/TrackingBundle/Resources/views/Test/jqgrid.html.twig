<!DOCTYPE html>
<html lang="en">

{% block head %}

<!-- JQuery 1.11.2 Javascript -->
    <script src="{{ asset('bundles/jquery/js/jquery-2.1.3.min.js') }}" type="text/javascript"></script>

    <!-- JQGrid CSS -->
    <!-- Loads the CSS code for the UI theme selected -->
    <link rel="stylesheet" media="screen" href="{{ asset('bundles/phpgrid-free-v1.5.2/lib/js/themes/ui-lightness/jquery-ui.custom.css') }}" />
    <!-- Loads the CSS settings for jqGrid -->
    <link rel="stylesheet" media="screen" href="{{ asset('bundles/phpgrid-free-v1.5.2/lib/js/jqgrid/css/ui.jqgrid.css') }}" />
    
    <!-- JQGrid 1.5.2 Javascript -->
    <script src="{{ asset('bundles/phpgrid-free-v1.5.2/lib/js/jquery.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/phpgrid-free-v1.5.2/lib/js/jqgrid/js/i18n/grid.locale-en.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/phpgrid-free-v1.5.2/lib/js/jqgrid/js/jquery.jqGrid.min.js') }}" type="text/javascript"></script>
    
<script type="text/javascript">
   $(document).ready(function () {
     $('body').on('click','#displayButton',  function(){
        $("#jqGrid").jqGrid({
            url: Routing.generate('_test_jqgrid'),
            datatype: "json",
            mtype: "GET",
            colNames: ["User Id", "User Name", "First Name", "Last Name"],
            colModel: [
                { name: "userId",align:"right"},
                { name: "userName"},
                { name: "firstName"},
                { name: "lastName"}
            ],
            pager: "#jqGridPager",
            rowNum: 10,
            rowList: [10,20],
            sortname: "userId",
            sortorder: "asc",
            height: 'auto',
            viewrecords: true,
            gridview: true,
            caption: "Test JQGrid"
        });
      });
    });
</script>

  {% endblock %}

  {% block body %}

    <input type="button" id="displayButton" value="Display" />
    <table id="jqGrid"></table>
    <div id="jqGridPager"></div>   

  {% endblock %}